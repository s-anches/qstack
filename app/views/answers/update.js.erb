<% if @answer.errors.present? %>
  <%= render "layouts/error", errors: @answer.errors %>
<% else %>
  <% if remotipart_submitted? %>
    $('div[data-id="<%= @answer.id %>"][data-object="answer"]').html("<%= j "#{render @answer}" %>");
  <% else %>
    $('div[data-id="<%= @answer.id %>"][data-object="answer"]').html('<%= j render @answer %>');
  <% end %>
  $('form#edit_answer_<%= @answer.id %>').hide();
  bindClickEditAnswer();
  bindClickClose();
  bindAddFiles();
  bindPlaceFiles();
<% end %>