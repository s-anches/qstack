<% if @comment.errors.present? %>
  <%= render "layouts/error", errors: @comment.errors %>
<% else %>
  $('.new_comment #comment_body').val('');
  $('form#new_comment').hide();
  $('div[data-id="<%= @comment.commentable_id %>"][data-object="<%= @comment.commentable_type.downcase %>"] .comments').append('<%= j render @comment %>');
<% end %>